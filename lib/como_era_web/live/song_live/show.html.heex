<.header>
  Song {@song.id}
  <:subtitle>This is a song record from your database.</:subtitle>
  <:actions>
    <.link navigate={~p"/songs/#{@song}/show/edit"}>
      <.button>Edit song</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Name">{@song.name}</:item>
</.list>
  <div class="prose" :if={@song.notes}>{raw @notes_markdown}</div>

<.back navigate={~p"/songs"}>Back to songs</.back>

<.modal :if={@live_action == :edit} id="song-modal" show on_cancel={JS.patch(~p"/songs/#{@song}")}>
  <.live_component
    module={ComoEraWeb.SongLive.FormComponent}
    id={@song.id}
    title={@page_title}
    action={@live_action}
    song={@song}
    patch={~p"/songs/#{@song}"}
  />
</.modal>
